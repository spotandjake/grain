  assert parse("{ \"Hello\" : \"World!\" }") ==
    Ok(JSONObject([("Hello", JSONString("World!"))]))

  assert parse("{\"a\":\"A\",\"b\":\"B\"}") ==
    Ok(JSONObject([("a", JSONString("A")), ("b", JSONString("B"))]))

  assert parse(
