  // Strings
  assert parse("\"\"") == Ok(JSONString(""))
  assert parse("\"\\r\\n\\t\\b\\f\\\\\\/\\\"\"") ==
    Ok(JSONString("\r\n\t\u{8}\u{c}\\/\""))
  assert parse("\"\\u2764\\ufe0f\"") == Ok(JSONString("❤️"))
  assert parse("\"\\uD834\\uDD1E\"") == Ok(JSONString("𝄞"))
