  assert parse("\"Unicode こんにちは世界!\"") ==
    Ok(JSONString("Unicode こんにちは世界!"))
  assert parse("\"A \\\"quoted\\\" string\"") ==
    Ok(JSONString("A \"quoted\" string"))
  assert parse("\"\\uD801\\uDC37\"") == Ok(JSONString("𐐷"))
  assert parse("\"🤘🏻\"") == Ok(JSONString("🤘🏻"))
